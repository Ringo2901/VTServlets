<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>productList</servlet-name>
    <servlet-class>com.bsuir.aleksandrov.phoneshop.web.ProductListPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>productList</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>cart</servlet-name>
    <servlet-class>com.bsuir.aleksandrov.phoneshop.web.CartPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cart</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>productDetails</servlet-name>
    <servlet-class>com.bsuir.aleksandrov.phoneshop.web.ProductDetailsPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>productDetails</servlet-name>
    <url-pattern>/productDetails/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>order</servlet-name>
    <servlet-class>com.bsuir.aleksandrov.phoneshop.web.OrderPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>order</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>orderOverview</servlet-name>
    <servlet-class>com.bsuir.aleksandrov.phoneshop.web.OrderOverviewServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>orderOverview</servlet-name>
    <url-pattern>/orderOverview/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>adminOrders</servlet-name>
    <servlet-class>com.bsuir.aleksandrov.phoneshop.web.AdminOrdersPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>adminOrders</servlet-name>
    <url-pattern>/admin/orders</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>adminOrderManage</servlet-name>
    <servlet-class>com.bsuir.aleksandrov.phoneshop.web.AdminOrderManagePageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>adminOrderManage</servlet-name>
    <url-pattern>/admin/orders/*</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/pages/errorPage.jsp</location>
  </error-page>

</web-app>
